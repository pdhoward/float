    "sinon": "^7.5.0",
    "ts-loader": "^5.3.3",
    "ts-node": "^8.5.4",
    "tslint": "^5.20.1",
    "tslint-config-airbnb": "^5.11.2",
    "typescript": "^3.8.3",
    "webpack": "^4.41.2",
