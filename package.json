  "proxy": {
    "/.netlify/functions": {
      "target": "http://localhost:9000",
      "pathRewrite": {
        "^/\\.netlify/functions": ""
      }
    }
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "ðŸ‘‡ ABOUT-xstart-command": "ðŸ’¡ ILLUSTRATION ONLY start the app and server #",
    "xstart": "npm-run-all --parallel xstart:app xstart:server",
    "xstart:app": "http-server -c-1",
    "xstart:server": "netlify-lambda serve functions",
    "ðŸ‘‡ ABOUT-build-command": "ðŸ’¡ build the sdk and package for access by test app",
    "build:umd": "rimraf bundles && webpack --config webpack.config.js --progress --colors",
    "build:es6": "rimraf dist && tsc --outDir ./dist",
    "build": "npm run build:umd && npm run build:es6 && npm run build:styles",
    "build:styles": "node-sass src/styles/main.scss bundles/strategicmachines-micro-sdk.min.css --output-style compressed --source-map true",
    "bundle-stats": "npm run build:umd && webpack-bundle-analyzer bundles/stats.json",
    "ðŸ‘‡ ABOUT-dev-command": "ðŸ’¡ spin up test server on port 9000 to test netlify functions locally",
    "devrun": "netlify-lambda serve functions",
    "devbuild": "netlify-lambda build functions",
    "serve": "node test/server",
    "xprepublish": "npm run test && npm run build",
    "lint": "tslint --config tslint.json --project tsconfig.json",
    "pretest": "npm run lint",
    "test": "mocha --opts tests/mocha.opts",
    "ðŸ‘‡ ABOUT-local": "ðŸ’¡ run netlify web app local with local lambda functions",
    "local": "npm-run-all --parallel devrun serve"
  },
